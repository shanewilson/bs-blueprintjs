{
  "name": "bs-blueprintjs",
  "version": "0.2.0",
  "description": "BuckleScript bindings for Blueprintjs",
  "repository": "shanewilson/bs-blueprintjs",
  "author": {
    "name": "Shane Wilson"
  },
  "license": "MIT",
  "files": [
    "src/*.re",
    "bsconfig.json"
  ],
  "scripts": {
    "build": "bsb -make-world",
    "watch": "bsb -make-world -w",
    "clean": "bsb -clean-world",
    "test": "jest",
    "knit:stitch": "knit stitch --parallel --scope unpublished",
    "knit:version": "knit exec --scope modified -- npm version --no-git-tag-version $npm_package_version",
    "knit:publish": "knit exec --scope unpublished -- npm publish --access public",
    "preversion": "knit validate && npm run test",
    "version": "npm run knit:version && npm run knit:stitch && git add .",
    "postversion": "npm run knit:publish"
  },
  "devDependencies": {
    "@blueprintjs/core": "^1.24.0",
    "@blueprintjs/table": "^1.21.0",
    "@blueprintjs/labs": "^0.6.0",
    "@blueprintjs/datetime": "^1.19.0",
    "@bs-blueprintjs/core": "file:src/packages/@bs-blueprintjs/core",
    "@bs-blueprintjs/labs": "file:src/packages/@bs-blueprintjs/labs",
    "@bs-blueprintjs/table": "file:src/packages/@bs-blueprintjs/table",
    "@bs-blueprintjs/datetime": "file:src/packages/@bs-blueprintjs/datetime",
    "@knit/knit": "^0.6.1",
    "bs-jest": "reasonml-community/bs-jest",
    "bs-platform": "^1.8.2",
    "dotenv": "^4.0.0",
    "jest": "^19.0.2",
    "react": "^15.5.4",
    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.5.4",
    "reason-react": "^0.2.1"
  }
}
